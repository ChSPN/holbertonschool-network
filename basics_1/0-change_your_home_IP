#!/bin/bash
# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Add or replace localhost entry to resolve to 127.0.0.2
sudo sed -i '/127.0.0.1[[:space:]]\+localhost/ s/127.0.0.1/127.0.0.2/' /etc/hosts

# Add or replace facebook.com entry to resolve to 8.8.8.8
if grep -q "facebook.com" /etc/hosts; then
    sudo sed -i '/facebook.com/ s/.*/8.8.8.8 facebook.com/' /etc/hosts
else
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
fi

echo "Configuration updated. Here is the current /etc/hosts file:"
cat /etc/hosts
